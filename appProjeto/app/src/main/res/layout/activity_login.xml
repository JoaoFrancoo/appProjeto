<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginBackground"
    android:padding="16dp"
    tools:context=".LoginActivity">

    <!-- Sombra escura sobre a imagem de fundo -->
<View
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#80000000"
    android:alpha="0.6" />

    <!-- Conteúdo Principal -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:gravity="center"
android:padding="24dp">

<!-- Logo do Login -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="128dp"
        android:layout_height="148dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:src="@drawable/LogoGrande"
        android:background="@drawable/circle_with_shadow"
        android:padding="20dp"
        android:contentDescription="Logo do Login"
        android:scaleType="centerCrop" />



<!-- Título -->
<TextView
    android:id="@+id/tvTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="24dp"
    android:text="Login"
    android:textColor="@android:color/white"
    android:textSize="32sp"
    android:textStyle="bold" />

<!-- Campo de Email -->
<EditText
    android:id="@+id/etEmail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:hint="Email"
    android:inputType="textEmailAddress"
    android:padding="12dp"
    android:background="#80000000"
    android:alpha="2"
    android:textColor="@android:color/white"
    android:textColorHint="#CCCCCC" />

<!-- Campo de Senha -->
<EditText
    android:id="@+id/etPassword"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp"
    android:hint="Senha"
    android:inputType="textPassword"
    android:padding="12dp"
    android:background="#80000000"
    android:alpha="2"
    android:textColor="@android:color/white"
    android:textColorHint="#CCCCCC" />

<!-- Botão de Login -->
<Button
    android:id="@+id/btnLogin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:backgroundTint="#fbdb5b"
    android:text="Entrar"
    android:textColor="@android:color/white"
    android:textStyle="bold" />

<!-- Botão de Criar Conta -->
<Button
    android:id="@+id/btnRegister"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#413806"
    android:text="Criar Conta"
    android:textColor="@android:color/white"
    android:textStyle="bold" />
</LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
