<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    android:padding="8dp"
    tools:context=".RegisterActivity">

    <!-- Sombra escura sobre a imagem de fundo -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:alpha="0.6" />

    <!-- Conteúdo Principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Logo do Registro -->
        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:src="@drawable/logogrande"
            android:background="@drawable/circle_with_shadow"
            android:padding="16dp"
            android:contentDescription="Logo do Registro"
            android:scaleType="centerCrop" />

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:text="Registrar"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Campo Nome -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:hint="Nome"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:background="#80000000"
            android:textColor="@android:color/white"
            android:textColorHint="#CCCCCC" />

        <!-- Campo Email -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:background="#80000000"
            android:textColor="@android:color/white"
            android:textColorHint="#CCCCCC" />

        <!-- Campo Senha -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:hint="Palavra-Passe"
            android:inputType="textPassword"
            android:padding="8dp"
            android:background="#80000000"
            android:textColor="@android:color/white"
            android:textColorHint="#CCCCCC" />

        <!-- Imagem de Perfil -->
        <ImageView
            android:id="@+id/ivProfilePhoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/profile_foto"
            android:contentDescription="Foto de perfil"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_with_shadow" />


        <!-- Botão Registrar -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#fbdb5b"
            android:text="Registrar"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <!-- Botão Voltar ao Login -->
        <Button
            android:id="@+id/btnBackToLogin"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="#413806"
            android:text="Voltar ao Login"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
